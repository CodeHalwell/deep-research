# Deep Research Workflow System - Environment Configuration

# OpenAI API Key (required for all agents)
OPENAI_API_KEY=your_openai_api_key_here

# Tavily Search API Key (required for advanced web search)
TAVILY_API_KEY=your_tavily_api_key_here

# SerpAPI Key (required for Google Scholar and academic search)
SERPAPI_API_KEY=your_serpapi_key_here

# MCP Server Configuration (optional, defaults provided)
SERVER_NAME=127.0.0.1
RESEARCH_SERVER_PORT=7860
DOCUMENT_SERVER_PORT=7861

# Optional: Anthropic API Key (if using Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Semantic Scholar API Key
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_key_here

# Application Settings
LOG_LEVEL=INFO
MAX_ITERATIONS=3
RESEARCH_TIMEOUT=60
